{% extends 'base.html.twig' %}

{% block title %}Message Form{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Message Form</h1>
        
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.message, 'Message') }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.message) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.includeTimestamp, 'Include timestamp') }}
                {{ form_widget(form.includeTimestamp, {'attr': {'class': 'form-select'}}) }}
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(form) }}
        
        {% if lastLine is not null %}
            <div class="mt-4">
                <h3>Last added line:</h3>
                <p>{{ lastLine }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
